<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_order_view_form" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.jewellery</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/list/field[@name='product_qty']" position="after">
                <field name="purity"/>
                <field name="jewellery_weight"/>
                <field name="product_weight_gm"/>
                <field name="gold_waste"/>
                <field name="making_charge_per_gm"/>
                <field name="labour_charges"/>
            </xpath>
        </field>
    </record>
</odoo>
