<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_account_move_jewellery_inherit" model="ir.ui.view">
    <field name="name">account.move.line.jewellery.inherit</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="arch" type="xml">
      <xpath expr="//list//field[@name='product_id']" position="after">
                <field name="purity"/>
                <field name="jewellery_weight"/>
                <field name="product_weight_gm"/>
                <field name="gold_waste"/>
                <field name="making_charge_per_gm"/>
                <field name="labour_charges"/>
      </xpath>
    </field>
  </record>
</odoo>
