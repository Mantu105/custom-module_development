<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="jewellery_purity_view_list" model="ir.ui.view">
        <field name="name">jewellery.purity.view.list</field>
        <field name="model">jewellery.purity</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="jewellery_purity_view_form" model="ir.ui.view">
        <field name="name">jewellery.purity.view.form</field>
        <field name="model">jewellery.purity</field>
        <field name="arch" type="xml">
            <form>
               <sheet>
                    <group>
                        <field name="name"/>
                    </group>
               </sheet>
            </form>
        </field>
    </record>

    <record id="action_jewellery_purity" model="ir.actions.act_window">
        <field name="name">Jewellery Purity</field>
        <field name="res_model">jewellery.purity</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
