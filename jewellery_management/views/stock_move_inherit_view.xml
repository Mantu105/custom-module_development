<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stock_move_view_form" model="ir.ui.view">
        <field name="name">stock.move.jewellery.form.inherit.jewellery</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//list//field[@name='product_id']" position="after">
                <field name="purity"/>
                <field name="jewellery_weight"/>
                <field name="product_weight_gm"/>
                <field name="gold_waste"/>
            </xpath>  
        </field>
    </record>
</odoo>
