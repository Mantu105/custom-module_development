<odoo>
    <record id="view_coaching_subject_list" model="ir.ui.view">
        <field name="name">coaching.subject.list</field>
        <field name="model">coaching.subject</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="view_coaching_subject_form" model="ir.ui.view">
        <field name="name">coaching.subject.form</field>
        <field name="model">coaching.subject</field>
        <field name="arch" type="xml">
            <form string="Subject">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="view_coaching_course_list" model="ir.ui.view">
        <field name="name">coaching.course.list</field>
        <field name="model">coaching.course</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="view_coaching_course_form" model="ir.ui.view">
        <field name="name">coaching.course.form</field>
        <field name="model">coaching.course</field>
        <field name="arch" type="xml">
            <form string="Class">
                <sheet>    
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>  
            </form>
        </field>
    </record>

    <record id="action_coaching_subject" model="ir.actions.act_window">
        <field name="name">Subjects</field>
        <field name="res_model">coaching.subject</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_coaching_course" model="ir.actions.act_window">
        <field name="name">Course</field>
        <field name="res_model">coaching.course</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
