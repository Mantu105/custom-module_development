<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="custom_web_login" inherit_id="web.login">
        <xpath expr="//t[@t-call='web.login_layout']" position="replace">
            <t t-call="web.login_layout">
                <main class="oe_website_login_container" style="min-height: 100vh; background-color: #f8f9fa;">
                    <div class="container h-100 d-flex align-items-center justify-content-center">
                        <div class="row w-100 justify-content-center">
                            <div class="col-lg-8 col-md-10 shadow-lg bg-white rounded overflow-hidden p-0">
                                <div class="row g-0">
                                    <!-- Left Side Image -->
                                    <div class="col-md-6 d-none d-md-block">
                                        <img src="/coaching_center_erp/static/src/img/login.jpg" 
                                             class="img-fluid h-100 w-100" style="object-fit: cover;" alt="Login Image"/>
                                    </div>

                                    <!-- Right Side Login Form -->
                                    <div class="col-md-6 p-5">
                                        <h3 class="mb-4 fw-bold text-primary text-center">Welcome Back</h3>

                                        <form method="post"
                                              t-attf-action="/web/login"
                                              onsubmit="this.action = '/web/login' + location.hash">
                                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                                            <div class="form-group mb-3">
                                                <label for="login" class="form-label fw-semibold">Email</label>
                                                <input type="text" name="login" id="login" class="form-control"
                                                       placeholder="Enter your email"  autocomplete="username"/>
                                            </div>

                                            <div class="form-group mb-3">
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <label for="password" class="form-label fw-semibold">Password</label>
                                                    <a href="/web/reset_password" class="text-decoration-none small">Forgot Password?</a>
                                                </div>
                                                <input type="password" name="password" id="password" class="form-control"
                                                       placeholder="Enter your password"  autocomplete="current-password"/>
                                            </div>

                                            <div t-if="error" class="alert alert-danger mt-2" role="alert">
                                                <t t-esc="error"/>
                                            </div>

                                            <div class="d-grid mt-4">
                                                <button type="submit" class="btn btn-primary btn-lg fw-semibold">
                                                    Log in
                                                </button>
                                            </div>

                                            <input type="hidden" name="type" value="password"/>
                                            <input type="hidden" name="redirect" t-att-value="redirect"/>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
            </t>
        </xpath>
    </template>
</odoo>
