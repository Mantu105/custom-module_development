<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_coaching_tutor_form" model="ir.ui.view">
        <field name="name">coaching.tutor.form</field>
        <field name="model">coaching.tutor</field>
        <field name="arch" type="xml">
            <form string="Tutor">
                <header>
                    <field name="state" widget="statusbar" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <div name="button_box">
                        <button name="action_open_batches" type="object" class="oe_stat_button" icon="fa-users">
                            <field name="batch_count" widget="statinfo" string="Assign Batches"/>
                        </button>
                    </div>
                    <group>
                        <group>
                        <field name="name"/>
                        <field name="email"/>
                        <field name="phone"/>
                        </group>
                        <group>
                        <field name="subject_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes">
                    <field name="notes" widget="html"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_coaching_tutor_list" model="ir.ui.view">
        <field name="name">coaching.tutor.list</field>
        <field name="model">coaching.tutor</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="batch_id"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="action_coaching_tutor" model="ir.actions.act_window">
        <field name="name">Tutors</field>
        <field name="res_model">coaching.tutor</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
