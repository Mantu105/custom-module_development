<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_coaching_student_form" model="ir.ui.view">
    <field name="name">coaching.student.form</field>
    <field name="model">coaching.student</field>
    <field name="arch" type="xml">
      <form string="Student">
        <header>
          <field name="status" widget="statusbar" options="{'clickable': '1'}"/>
        </header>
        <sheet>
         <div class="oe_button_box" name="button_box"/>
            <field name="photo" widget='image' class="oe_avatar"/>  
          <div class="oe_title">
            <h1>
                <field name="name"/>
            </h1>
          </div>
          <group>
              <group>
                <field name="student_id"/>
                <field name="dob"/>
                <field name="gender"/>
                <field name="phone"/>
              </group>
        
              <group>
                <field name="email"/>
                <field name="guardian_name"/>
                <field name="guardian_phone"/>
                <field name="batch_id"/>
                <field name="admission_date"/>
              </group>
              <group>
                <span class="o_form_label o_td_label o_address_type" name="address_name">
                    <span>Address</span>
                </span>
                <div class="o_address_format">
                    <field name="street" placeholder="Street..." class="o_address_street"/>
                    <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                    <field name="city" placeholder="City" class="o_address_city"/>
                    <field name="state_id" class="o_address_state" placeholder="State" options="{'no_open': True, 'no_quick_create': True}" context="{'country_id': country_id, 'default_country_id': country_id, 'zip': zip}"/>
                    <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                    <div name="partner_address_country" class="d-flex justify-content-between">
                        <field name="country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}'/>
                    </div>
                </div>
              </group> 
          </group>
          <notebook>
              <page string="Batch Details">
                  <group>
                      <field name="batch_name" readonly="1"/>
                      <field name="batch_start_date" readonly="1"/>
                      <field name="batch_end_date" readonly="1"/>
                      <field name="batch_timing" readonly="1"/>
                  </group>
              </page>
              <page string="Fees">
                <field name="fee_ids">
                  <list editable="bottom" create="false" delete="false" options="{'no_open': False}"  edit="false">
                    <field name="payment_date"/>
                    <field name="amount"/>
                    <field name="amount_paid"/>
                    <field name="balance"/>
                    <field name="payment_mode"/>
                    <field name="status"/>
                  </list>
                </field>
              </page>
          </notebook>
        </sheet>
        <chatter/>
      </form>
    </field>
  </record>

  <record id="view_coaching_student_list" model="ir.ui.view">
    <field name="name">coaching.student.list</field>
    <field name="model">coaching.student</field>
    <field name="arch" type="xml">
      <list string="Students">
        <field name="name"/>
        <field name="student_id"/>
        <field name="phone"/>
        <field name="email"/>
        <field name="batch_id"/>
        <field name="status"/>
      </list>
    </field>
  </record>

  <record id="view_coaching_student_search" model="ir.ui.view">
        <field name="name">coaching.student.search</field>
        <field name="model">coaching.student</field>
        <field name="arch" type="xml">
            <search string="Search Contracts">
                <field name="name"/>
                <field name="student_id"/>
                <field name="phone"/>
                <field name="status"/>
                <filter name="filter_active" string="Active" domain="[('status', '=', 'active')]"/>
                <filter name="filter_left" string="Left" domain="[('status', '=', 'left')]"/>
                <filter name="filter_completed" string="Completed" domain="[('status', '=', 'completed')]"/>
                <group expand="0" string="Group By">
                <filter string="Batch" name="group_by_batch" context="{'group_by': 'batch_id'}"/>
                <filter string="City" name="group_by_city" context="{'group_by': 'city'}"/>
                <filter string="State" name="group_by_state" context="{'group_by': 'state_id'}"/>
            </group>
            </search>
        </field>
    </record>


  <record id="action_coaching_student" model="ir.actions.act_window">
    <field name="name">Students</field>
    <field name="res_model">coaching.student</field>
    <field name="view_mode">list,form</field>
    <field name="search_view_id" ref="view_coaching_student_search"/>
  </record>
</odoo>
