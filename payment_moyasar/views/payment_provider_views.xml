<odoo>
    <record id="view_payment_provider_form_moyasar" model="ir.ui.view">
        <field name="name">payment.provider.form.moyasar</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='provider_credentials']" position="inside">
                <field name="moyasar_public_key"/>
                <field name="moyasar_secret_key" password="True"/>
            </xpath>
        </field>
    </record>
</odoo>